@model RegisterConfirmationModel
@{
    ViewData["Title"] = "RegisterConfirmation";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Registration Confirmation</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Account</a></li>
                    <li class="breadcrumb-item active">Confirmation</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Registration Confirmation</h3>
                </div>
                <div class="card-body">
                    <p><h4>Registration successful. Now check your email (@Model.Email) &amp; Confirm it.</h4></p>
                    <p><h4>Go back to your page. <a href="@Model.ReturnUrl">Click Here</a></h4></p>
                </div>
            </div>
        </div>
    </div>
</section>