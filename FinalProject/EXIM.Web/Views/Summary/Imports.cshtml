@{
    ViewData["Title"] = "Imports";
}

@section Styles
{
    <link rel="stylesheet" href="/dashboard/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

@section Sidebar{
    <partial name="_DashboardMenuPartial" />
}

@section Scripts
{
    <script src="/dashboard/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/dashboard/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#imports').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": '/Summary/GetImportData'
            });
        });
    </script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Import Contacts</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Summary</a></li>
                    <li class="breadcrumb-item">Imports</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="row m-3">
    <a asp-area="#" asp-controller="Contact" asp-action="import" class="text-decoration-none btn btn-info">Import New Contact</a>
</div>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Available Imports</h3>
                </div>
                <div class="card-body">
                    <table id="imports" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>FileName</th>
                                <th>GroupName</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>FileName</th>
                                <th>GroupName</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

